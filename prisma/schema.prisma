datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String @id @map("_id") @default(auto()) @db.ObjectId
  name     String
  email    String @unique
  password String
}

model InterviewSession {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String?
  startedAt DateTime @default(now())
  messages  Json[]
  score     Float?
}
