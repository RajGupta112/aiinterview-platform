// prisma/schema.prisma
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")  // weâ€™ll set this in .env
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String @id @map("_id") @default(auto()) @db.ObjectId
  name     String
  email    String @unique
  password String
}
